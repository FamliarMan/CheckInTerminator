<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:tools="http://schemas.android.com/tools"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

	<TextView android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:id="@+id/tvName"
			  tools:text="上班打卡卡看卡开啊"
			  android:layout_marginLeft="15dp"
			  android:layout_marginTop="15dp"
			  android:layout_marginStart="15dp"
			  android:maxLines="1"
			  android:ellipsize="end"
			  android:maxWidth="160dp"
			  android:textColor="@android:color/black"
			  android:textSize="17sp"

	/>
	<TextView android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  tools:text="未到提醒时间"
			  android:id="@+id/tvStatus"
			  android:layout_toRightOf="@+id/tvName"
			  android:textSize="10dp"
			  android:layout_marginTop="18dp"
			  android:layout_marginLeft="5dp"
			  android:padding="2dp"
			  android:textColor="@color/white_ffffff"
			  android:background="@drawable/shape_green_rec"

	/>

	<TextView android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:layout_below="@id/tvName"
			  android:layout_alignLeft="@id/tvName"
			  android:layout_marginTop="5dp"
			  android:id="@+id/tvStartTime"
			  tools:text="18:00开始提醒"
			  android:layout_alignStart="@id/tvName"/>
	<Button android:layout_width="wrap_content"
			android:layout_height="30dp"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_marginRight="15dp"
			tools:text="结束任务"
			android:background="@drawable/shape_red_button"
			android:textColor="@android:color/white"
			android:id="@+id/btnStatus"
			android:layout_alignParentEnd="true"
			android:layout_marginEnd="15dp"/>
	<View android:layout_width="match_parent"
		  android:layout_height="1dp"
		  android:layout_below="@id/tvStartTime"
		  android:layout_marginTop="5dp"
		  android:background="@color/kprogresshud_grey_color"/>
</RelativeLayout>